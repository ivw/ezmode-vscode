{
  "name": "ezmode",
  "publisher": "ivw",
  "displayName": "EzMode",
  "description": "Modal editing without the steep learning curve.",
  "repository": "github:ivw/ezmode-vscode",
  "author": "Ivo Wijnker",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ezmode.enterEzMode",
        "title": "Enter EzMode"
      },
      {
        "command": "ezmode.selectLine",
        "title": "Select Current Line"
      },
      {
        "command": "ezmode.selectWord",
        "title": "Select Current Word"
      },
      {
        "command": "ezmode.selectToDelim",
        "title": "Select To Delimiter"
      },
      {
        "command": "ezmode.removeDelim",
        "title": "Remove Delimiter"
      },
      {
        "command": "ezmode.toggleCase",
        "title": "Toggle Case"
      },
      {
        "command": "ezmode.flipSelection",
        "title": "Flip Selection"
      },
      {
        "command": "ezmode.editEzModeRc",
        "enablement": "!isWeb",
        "title": "Edit .ezmoderc"
      },
      {
        "command": "ezmode.reloadEzModeRc",
        "enablement": "!isWeb",
        "title": "Reload .ezmoderc"
      },
      {
        "command": "ezmode.openEzModeMenu",
        "title": "Open EzMode menu"
      },
      {
        "command": "ezmode.executeCommand",
        "title": "Execute EzMode Command"
      },
      {
        "command": "ezmode.openEzModeTutorial",
        "title": "Open EzMode Tutorial"
      },
      {
        "command": "ezmode.nextChangedFile",
        "title": "View next changed file"
      },
      {
        "command": "ezmode.nextChange",
        "title": "View next change"
      },
      {
        "command": "ezmode.gitReview",
        "title": "Open/close changes"
      },
      {
        "command": "ezmode.numberOperation",
        "title": "Number operation (default: increment)"
      },
      {
        "command": "ezmode.scroll",
        "title": "Scroll half a page (down by default)"
      }
    ],
    "keybindings": [
      {
        "command": "ezmode.enterEzMode",
        "key": "escape",
        "when": "editorTextFocus && !suggestWidgetVisible && !(ezmode.mode == ez || ezmode.mode == select)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ezmode",
          "title": "EzMode",
          "icon": "media/ezmode.svg"
        }
      ]
    },
    "views": {
      "ezmode": [
        {
          "id": "ezmode.cheatsheet",
          "name": "Cheat Sheet"
        }
      ]
    },
    "languages": [
      {
        "id": "ezmoderc",
        "aliases": [
          "EzMode"
        ],
        "extensions": [
          ".ezmoderc"
        ],
        "configuration": "./ezmoderc-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ezmoderc",
        "scopeName": "source.ezmoderc",
        "path": "./syntaxes/ezmoderc.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "format": "prettier src --write"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "24.x",
    "@types/vscode": "1.103.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "3.6.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.2"
  }
}
