{
  "name": "ezmode",
  "displayName": "EzMode",
  "description": "Modal editing without the steep learning curve.",
  "repository": "github:ivw/ezmode-vscode",
  "author": "Ivo Wijnker",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ezmode.enterEzMode",
        "title": "Enter EzMode"
      },
      {
        "command": "ezmode.selectLine",
        "title": "Select Current Line"
      },
      {
        "command": "ezmode.selectWord",
        "title": "Select Current Word"
      }
    ],
    "keybindings": [
      {
        "command": "ezmode.enterEzMode",
        "key": "escape",
        "when": "editorTextFocus && !editorTabMovesFocus && !suggestWidgetVisible && ezmode.mode == type"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "ezmode",
          "title": "EzMode",
          "icon": "media/ezmode.svg"
        }
      ]
    },
    "views": {
      "ezmode": [
        {
          "id": "ezmode.cheatsheet",
          "name": "Cheat Sheet"
        }
      ]
    },
    "languages": [
      {
        "id": "ezmoderc",
        "aliases": [
          "EzMode configuration"
        ],
        "extensions": [
          ".ezmoderc"
        ],
        "configuration": "./ezmoderc-language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "ezmoderc",
        "scopeName": "source.ezmoderc",
        "path": "./syntaxes/ezmoderc.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.103.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "3.6.2",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.42.0"
  }
}
